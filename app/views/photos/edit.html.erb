<%= render "shared/second_header" %>

<div class="post_photo">
   <div class="photo">
    <%= form_with model: @photo, local: true do |f| %>
      <%= render "shared/error", model: f.object %>
      
      <div class="content-photo">
        <p>画像を投稿してね</p>
        <span class="indispensable">※必須</span><br>
        <div class="image">
        <p>クッリクしてダウンロード</p>
        <%= f.file_field :image, id: "new_image" %>
        </div>
      </div>

      <div class="content-title">
        <span class="indispensable">※必須</span><br>
        <%= f.label :title, "お題" , class: "title-post" %><br>
        <%= f.text_area :title %>
      </div>
      <div class="content-category">
        <span class="indispensable">※必須</span><br>
        <%= f.label :category_id, "お題のカテゴリー" %><br>
        <%= f.collection_select(:category_id, Category.all, :id, :name, { } ,{class: "select-box", id: "item-category"}) %>
      </div>
      <div class="content-post">
        <%= f.submit "投稿" %>
      </div>
      
    <% end %>
   </div>
</div>

<%= render "shared/footer" %>